pipeline {
    agent any

    stages {
        stage('Checkout'){
            steps {
                echo 'Checkout the code from the repository !!!'
            }
        }

        stage('Build') {
            steps {
                echo 'This is the build stage'
            }
        }

        stage('Test'){
            steps {
                echo 'This is the testinggg stage'
            }
        }

        stage('Deploy'){
            steps{
                echo "Successfully implemented the CI/CD pipeline... !!!"
            }
        }

    }
}